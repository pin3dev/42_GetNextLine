RED=\033[0;31m
GREEN=\033[0;32m
RESET=\033[0m
BKGRAY=\033[47;90m
BKGRAYGREEN=\033[1;92m
BKGRAYRED=\033[1;91m

################################################################################
# 									Executable	 	 						   #
################################################################################

NAME = libgnl.a
TEST_EXEC = testergnl

################################################################################
# 							Dir	Path	Variables 							   #
################################################################################

SRCDIR = src
OBJDIR = obj
TESTDIR = test

################################################################################
# 						Compiler and Flags	Variables						   #
################################################################################

CC = gcc
CFLAGS = -Wall -Wextra -Werror -I inc -I $(LIBFT_DIR)/inc
RM = rm -f
RMD = rm -rf

################################################################################
# 							Libft Variables 								   #
################################################################################

LIBFT_DIR = ../../42_Libft/libft
LIBFT = $(LIBFT_DIR)/libft.a
LIBFT_REPO = git@github.com:pin3dev/42_Libft.git

################################################################################
# 							Files	Path	Variables 						   #
################################################################################

SRC =   $(SRCDIR)/get_next_line.c \
        $(SRCDIR)/get_next_line_utils.c 

OBJS = $(SRC:$(SRCDIR)/%.c=$(OBJDIR)/%.o)

################################################################################
# 							Manual	Targets		 							   #
################################################################################

all: $(OBJDIR) $(LIBFT) $(NAME)

clean:
	@$(RM) $(OBJS)
	@if [ -d "$(OBJDIR)" ]; then $(RMD) $(OBJDIR); fi
	@echo "${BKGRAY}GNL:${BKGRAYRED}- Obj${RESET}"

fclean: clean
	@$(RM) $(NAME)
	@if [ -f "$(TEST_EXEC)" ]; then $(RM) $(TEST_EXEC); fi
	@echo "${BKGRAY}GNL: ${BKGRAYRED}- Exec${RESET}"

re: fclean all

################################################################################
# 							Test Target 		 							   #
################################################################################

test: all
	@$(CC) $(CFLAGS) -o $(TEST_EXEC) $(TESTDIR)/test.c -L. -lgnl -L$(LIBFT_DIR) -lft
	@echo "Running tests..."
	@./$(TEST_EXEC)


################################################################################
# 							Dependencies Targets							   #
################################################################################

$(LIBFT):
	@if [ ! -d ../../42_Libft ]; then \
		git clone $(LIBFT_REPO) ../../42_Libft > /dev/null 2>&1; \
	fi
	@printf "${BKGRAY}Libft:${RESET} "; 
	@$(MAKE) -C $(LIBFT_DIR)

################################################################################
# 						Auto Targets 				 						   #
################################################################################

$(OBJDIR):
	@mkdir -p $(OBJDIR)

$(OBJDIR)/%.o: $(SRCDIR)/%.c | $(OBJDIR)
	@$(CC) $(CFLAGS) -c $< -o $@

$(NAME): $(OBJS)
	@ar rcs $(NAME) $(OBJS) & \
	./gui_load.sh "GNL" 
	@wait

################################################################################
# 										PS		 	 						   #
################################################################################

.PHONY: all clean fclean re test
